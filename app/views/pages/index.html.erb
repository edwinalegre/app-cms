<h3>Manage Pages</h3>

<table class="table">
    <td><%= link_to "Create page", new_page_path %></td>
</table>

<h3>Pages</h3>

<table class="table table-striped">
  <thead>
    <th>Name</th>
    <th>Link</th>
    <th>Position</th>
    <th>Visible</th>
    <th>Edit</th>
    <th>Sections</th>
  </thead>
  <tbody>
  <% @page.sort_by{|page| page.position}.each do |page| %>
  <tr>
    <td><%= page.name %></td>
    <td><%= page.link %></td>
    <td><%= page.position %></td>
    <td><%= page.visible %></td>
    <td><%= link_to "edit", edit_page_path(:id => page.id) %></td>
    <td><%= link_to "manage sections", page_path(:id => page.id) %></td>
  </tr>
  <% end %>
  </tbody>
</table>