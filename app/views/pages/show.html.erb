<h3>Manage Sections</h3>

<table class="table">
    <td><%= link_to "Create new sections", new_section_path(:id => @page.id) %></td>
</table>

<h3>Sections</h3>

<table class="table table-striped">
  <thead>
    <th>Name</th>
    <th>Type</th>
    <th>Position</th>
    <th>Visible</th>
    <th>Edit</th>
  </thead>
  <tbody>
  <% @section.sort_by{|section| section.position}.each do |section| %>
  <tr>
    <td><%= section.name %></td>
    <td><%= section.section_type %></td>
    <td><%= section.position %></td>
    <td><%= section.visible %></td>
    <td><%= link_to "edit", edit_section_path(:id => section.id) %></td>
  </tr>
  <% end %>
  </tbody>
</table>
