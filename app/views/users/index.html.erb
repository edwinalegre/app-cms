<h3>Manage Users</h3>

<table class="table">
    <td><%= link_to "Create new user", new_user_path %></td>
</table>

<h3>Users</h3>

<table class="table table-striped">
  <thead>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Edit</th>
  </thead>
  <tbody>
  <% @user.each do |user| %>
  <tr>
    <td><%= user.firstname %></td>
    <td><%= user.lastname %></td>
    <td><%= user.email %></td>
    <td><%= link_to "edit", edit_user_path(:id => user.id) %></td>
  </tr>
  <% end %>
  </tbody>
</table>
