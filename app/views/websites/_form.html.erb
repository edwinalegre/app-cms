<ul>
  <% @website.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>

  <%= f.label "Name:" %><br>
  <%= f.text_field :name %><br>

  <%= f.label "Theme:" %><br>
  <% if @website.theme %>
    <%= f.select :theme, options_for_select(["Select One", "vertical", "tabs"], :disabled => ["Select One"], :selected => @website.theme) %><br>
  <% else %>
    <%= f.select :theme, options_for_select(["Select One", "vertical", "tabs"], :disabled => ["Select One"], :selected => params[:website][:theme]) %><br>
  <% end %>

  <%= f.label "Tagline:" %><br>
  <%= f.text_field :tagline %><br>

  <%= f.label "Logo:" %><br>
  <%= f.text_field :logo %><br>

  <%= f.label "Background Image:" %><br>
  <%= f.text_field :backgroundimage %><br>

  <%= f.label "Footer:" %><br>
  <%= f.text_field :footer %><br>